<% include ../partials/header %>
<div class="row">
  <h1 style="text-align: center;">Krijoni një vendodhje të re</h1>
  <div class="rwd-form">
    <form action="/campgrounds" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Emri</label>
        <input class="form-control" type="text" name="name" placeholder="Tirane" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="image">Imazh</label>
        <input id="image" type="file" name="image" accept="image/*" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="price">Çmimi</label>
        <input class="form-control" type="number" name="price" placeholder="9.99" min="0.01" step="0.01" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="location">Vendndodhja</label>
        <input class="form-control" type="text" name="location" id="location" placeholder="Albania,Tirane" autocomplete="off" />
      </div>
      <div class="form-group">
        <label for="description">Përshkrim</label>
        <input class="form-control" type="text" name="description" placeholder="Kryeqyteti i Shqiperis" autocomplete="off" />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Dergo</button>
      </div>
    </form>
    
    <a href="/campgrounds">Mbrapa</a>
  </div>
</div>
<% include ../partials/footer %>